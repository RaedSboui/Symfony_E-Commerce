{% extends 'table.html.twig' %}

{% block title %}Category list{% endblock %}

{% block path_new %} href="{{ path('category_new') }}" {% endblock %}

{% block thead %}
    <th class="text-center" data-field="state" data-checkbox="true"></th>
    <th class="text-center" data-field="id" data-sortable="true">Id</th>
    <th class="text-center" data-field="name" data-sortable="true">Name</th>
    <th class="text-center" data-field="action" data-sortable="true">actions</th>
{% endblock %}

{% block tbody %}

{% for category in categories %}
<tr>
    <td data-field="state" data-checkbox="true"></td>
    <td>{{ category.id }}</td>
    <td>{{ category.name }}</td>
    <td class="text-center">
        <div style="display:flex; align-items:center; justify-content: space-around;">
            <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-primary"><i class="fa fa-search-plus"></i></a>
            <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-success"><i class="fas fa-edit"></i></a>
            {{ include('category/_delete_form.html.twig') }}
        </div>
    </td>
</tr>
{% else %}
<tr>
    <td colspan="3">no records found</td>
</tr>
{% endfor %}

{% endblock %}



     


