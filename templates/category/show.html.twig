{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div style="margin-top:5rem;">
    <h1 class="text-center" style="margin-bottom: 2rem;">
        Category <span style="color:#e74c3c">{{ category.name }}</span>
    </h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>
    <table class="mx-auto w-auto">
        <tr>
            <td>
                <a href="{{ path('category_index') }}" class="btn btn-primary" style="margin-right: 1rem;">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </td>
            <td>
                <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-success" style="margin-right: 1rem;">
                    <i class="fas fa-edit"></i>
                </a>
            </td>
            <td>
                {{ include('category/_delete_form.html.twig') }}
            </td>
        </tr>
    </table>
</div>
{% endblock %}
