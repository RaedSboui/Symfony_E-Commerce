{% extends 'table.html.twig' %}

{% block title %}Order list{% endblock %}

{% block path_new %}href="{{ path('order_new') }}"{% endblock %}

{% block thead %}
    <th class="text-center" data-field="state" data-checkbox="true"></th>
    <th class="text-center" data-field="id" data-sortable="true">Id</th>
    <th class="text-center" data-field="number" data-sortable="true">Number</th>
    <th class="text-center" data-field="date" data-sortable="true">Date</th>
    <th class="text-center" data-field="customer" data-sortable="true">Customer</th>
    <th class="text-center" data-field="action" data-sortable="true">actions</th>
{% endblock %}

{% block tbody %}

{% for order in orders %}
<tr>
    <td data-field="state" data-checkbox="true"></td>
    <td class="text-center">{{ order.id }}</td>
    <td class="text-center">{{ order.number }}</td>
    <td class="text-center">{{ order.date ? order.date|date('Y-m-d') : '' }}</td>
    <td class="text-center">{{ order.Customer }}</td>
    <td class="text-center">
        <div style="display:flex; align-items:center; justify-content: space-around;">
            <a href="{{ path('order_show', {'id': order.id}) }}" class="btn btn-primary"><i class="fa fa-search-plus"></i></a>
            <a href="{{ path('order_edit', {'id': order.id}) }}" class="btn btn-success"><i class="fas fa-edit"></i></a>
            {{ include('order/_delete_form.html.twig') }}
        </div>
    </td>
</tr>
{% else %}
<tr>
    <td colspan="4">no records found</td>
</tr>
{% endfor %}

{% endblock %}

