{% block stylesheet %}
<link rel="stylesheet"  href={{ asset('assets/form/form.css') }} >
{% endblock %}

{{ form_start(form) }}

    {{ form_row(form.number, {'attr': {'class' : 'form-control', 'placeholder': 'Number'}}) }}

    {{ form_row(form.date, {'attr': {'class' : 'form-control', 'placeholder': 'Date'}}) }}

    {{ form_row(form.customer, {'attr': {'class' : 'form-control'}}) }}

    <table>
        <tr>
            <td>
                <a href="{{ path('order_index') }}" type="button" class="btn btn-primary" style="margin-right: 1rem;">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </td>
            <td>
                <button class="btn btn-success">{{ button_label|default('Save') }}</button>
            </td>
        </tr>
    </table>

{{ form_end(form) }}
