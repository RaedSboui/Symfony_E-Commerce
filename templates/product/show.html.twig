{% extends 'base.html.twig' %}

{% block title %}
    {{ product.name }}
{% endblock %}
{% block stylesheets %}
    <style>
      img{
          width: 150px;
          height: 150px;
          border-radius: 20px;
      }
    </style>
{% endblock %}

{% block body %}
<div style="margin-top:5rem;">
    <h1 class="text-center" style="color:#e74c3c; margin-bottom: 2rem;">
        {{ product.name }}
    </h1>
    <table class="table">
        <tbody>
            <tr>
                <th>
                    Image
                </th>
                <td class="text-center">
                    <img src="{{ asset('/uploadsImages/'~ product.photo) }}" alt="" />
                </td>
            </tr>
            <tr>
                <th>
                    Id
                </th>
                <td class="text-center">
                    {{ product.id }}
                </td>
            </tr>
            <tr>
                <th>
                    Name
                </th>
                <td class="text-center">
                    {{ product.name }}
                </td>
            </tr>
            <tr>
                <th>
                    Description
                </th>
                <td class="text-center">
                    {{ product.description }}
                </td>
            </tr>
            <tr>
                <th>
                    Usage
                </th>
                <td>
                    {{ product.prodUsage }}
                </td>
            </tr>
            <tr>
                <th>
                    Price
                </th>
                <td class="text-center">
                    {{ product.price }}
                </td>
            </tr>
        </tbody>
    </table>
    <table class="mx-auto w-auto">
        <tr>
            <td>
                <a href="{{ path('product_index') }}" class="btn btn-primary" style="margin-right: 1rem;">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </td>
            <td>
                <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-success" style="margin-right: 1rem;">
                    <i class="fas fa-edit"></i>
                </a>
            </td>
            <td>
                {{ include('product/_delete_form.html.twig') }}
            </td>
        </tr>
    </table>
</div>
{% endblock %}
