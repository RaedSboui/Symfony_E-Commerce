{% block stylesheet %}
<link rel="stylesheet"  href={{ asset('assets/form/form.css') }} >
{% endblock %}

{{ form_start(form) }}

    {{ form_row(form.firstName, {'attr': {'class' : 'form-control', 'placeholder': 'First Name'}}) }}

    {{ form_row(form.lastName, {'attr': {'class' : 'form-control', 'placeholder': 'Last Name'}}) }}

    {{ form_row(form.phone, {'attr': {'class' : 'form-control', 'placeholder': 'Phone'}}) }}

    {{ form_row(form.adress, {'attr': {'class' : 'form-control', 'placeholder': 'Adress'}}) }}

    <table>
        <tr>
            <td>
                <a href="{{ path('customer_index') }}" type="button" class="btn btn-primary" style="margin-right: 1rem;">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </td>
            <td>
                <button class="btn btn-success">{{ button_label|default('Save') }}</button>
            </td>
        </tr>
    </table>

{{ form_end(form) }}
