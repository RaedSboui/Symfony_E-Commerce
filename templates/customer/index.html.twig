{% extends 'table.html.twig' %}

{% block title %}Customer list{% endblock %}

{% block path_new %}href="{{ path('customer_new') }}"{% endblock %}

{% block thead %}
    <th class="text-center" data-field="state" data-checkbox="true"></th>
    <th class="text-center" data-field="" data-sortable="true">Id</th>
    <th class="text-center" data-field="firstName" data-sortable="true">First Name</th>
    <th class="text-center" data-field="lastName" data-sortable="true">Last Name</th>
    <th class="text-center" data-field="phone" data-sortable="true">Phone</th>
    <th class="text-center" data-field="adress" data-sortable="true">Adress</th>
    <th class="text-center" data-field="action" data-sortable="true">actions</th>
{% endblock %}

{% block tbody %}

{% for customer in customers %}
<tr>
    <td data-field="state" data-checkbox="true"></td>
    <td class="text-center">{{ customer.id }}</td>
    <td class="text-center">{{ customer.firstName }}</td>
    <td class="text-center">{{ customer.lastName }}</td>
    <td class="text-center">{{ customer.phone }}</td>
    <td class="text-center">{{ customer.adress }}</td>
    <td>
        <div style="display:flex; align-items:center; justify-content: space-around;">
            <a href="{{ path('customer_show', {'id': customer.id}) }}" class="btn btn-primary"><i class="fa fa-search-plus"></i></a>
            <a href="{{ path('customer_edit', {'id': customer.id}) }}" class="btn btn-success"><i class="fas fa-edit"></i></a>
            {{ include('customer/_delete_form.html.twig') }}
        </div>
    </td>
</tr>
{% else %}
<tr>
    <td colspan="5">no records found</td>
</tr>
{% endfor %}

{% endblock %}






