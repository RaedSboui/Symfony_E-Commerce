{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
<div style="margin-top:5rem;">
    <h1 class="text-center" style="margin-bottom: 2rem;">
        Customer <span style="color:#e74c3c">{{ customer.firstName }} {{ customer.lastName }}</span>
    </h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ customer.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ customer.lastName }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ customer.phone }}</td>
            </tr>
        </tbody>
    </table>
    <table class="mx-auto w-auto">
        <tr>
            <td>
                <a href="{{ path('customer_index') }}" class="btn btn-primary" style="margin-right: 1rem;">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </td>
            <td>
                <a href="{{ path('customer_edit', {'id': customer.id}) }}" class="btn btn-success" style="margin-right: 1rem;">
                    <i class="fas fa-edit"></i>
                </a>
            </td>
            <td>
                {{ include('customer/_delete_form.html.twig') }}
            </td>
        </tr>
    </table>
</div>
{% endblock %}
